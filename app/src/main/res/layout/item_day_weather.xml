<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dayView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:paddingStart="@dimen/card_spacing"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="@dimen/card_spacing"
            android:textColor="@color/black"
            tools:text="Tuesday"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/weatherIcon"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="5"
            android:src="@drawable/ic_01d"/>

        <TextView
            android:id="@+id/hiTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="@dimen/item_spacing"
            android:paddingBottom="@dimen/item_spacing"
            android:gravity="center"
            android:layout_marginEnd="@dimen/item_spacing"
            android:textColor="@color/black"
            tools:text="29"/>

        <TextView
            android:id="@+id/loTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="@dimen/item_spacing"
            android:paddingBottom="@dimen/item_spacing"
            android:layout_marginStart="@dimen/item_spacing"
            android:gravity="center"
            android:layout_marginEnd="@dimen/card_spacing"
            tools:text="15"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>